<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5271FF"
    tools:context="App.Aplicacion.cchat_0_3.View.LogInActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="419dp"
        android:layout_height="729dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/logo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="348dp"
            android:layout_height="463dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="364dp"
                android:layout_height="495dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:gravity="center"
                    android:text="Bienvenido"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailAdress_L"
                    style="@android:style/Widget.Material.AutoCompleteTextView"
                    android:layout_width="282dp"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:hint=" Correo electronico"
                    android:inputType="text"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <EditText
                    android:id="@+id/password_L"
                    style="@android:style/Widget.Material.AutoCompleteTextView"
                    android:layout_width="291dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="49dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F3F4F4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <Button
                        android:id="@+id/login"
                        android:layout_width="257dp"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Ingresar"
                        android:textColor="#1693C5"
                        app:icon="@drawable/baseline_check_24"
                        app:iconGravity="textEnd"
                        app:iconTint="#1693C5" />
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="58dp" />

                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="256dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="no tienes una cuenta? registrate " />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>